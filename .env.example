# AI Personal Assistant - Environment Variables
# Copy this file to .env and fill in your values
# NEVER commit .env files with real credentials

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Node environment: development, test, production
NODE_ENV=development

# Application port
PORT=3000

# Application host
HOST=localhost

# Log level: debug, info, warn, error
LOG_LEVEL=info

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL connection string
# Format: postgresql://user:password@host:port/database
DATABASE_URL=postgresql://postgres:password@localhost:5432/ai_assistant

# Redis connection string (for caching and message queuing)
REDIS_URL=redis://localhost:6379

# =============================================================================
# SECURITY & ENCRYPTION
# =============================================================================

# JWT secret for authentication tokens (generate a strong random string)
# Example: openssl rand -base64 64
JWT_SECRET=your-jwt-secret-here-replace-with-strong-random-string

# JWT token expiration (e.g., 1h, 7d, 30d)
JWT_EXPIRES_IN=7d

# Refresh token secret (different from JWT_SECRET)
REFRESH_TOKEN_SECRET=your-refresh-token-secret-here

# Refresh token expiration
REFRESH_TOKEN_EXPIRES_IN=30d

# Encryption key for data at rest (AES-256, must be 32 bytes / 256 bits)
# Generate with: openssl rand -hex 32
ENCRYPTION_KEY=your-32-byte-hex-encryption-key-here

# =============================================================================
# TLS/SSL CONFIGURATION
# =============================================================================

# Enable TLS for HTTPS server (recommended in production)
TLS_ENABLED=false

# Path to TLS private key file (required in production if TLS_ENABLED=true)
TLS_KEY_PATH=/path/to/private-key.pem

# Path to TLS certificate file (required in production if TLS_ENABLED=true)
TLS_CERT_PATH=/path/to/certificate.pem

# Path to TLS CA certificate file (optional, for intermediate CAs)
TLS_CA_PATH=/path/to/ca-certificate.pem

# =============================================================================
# SMS / TWILIO CONFIGURATION
# =============================================================================

# Twilio Account SID
TWILIO_ACCOUNT_SID=your-twilio-account-sid

# Twilio Auth Token
TWILIO_AUTH_TOKEN=your-twilio-auth-token

# Twilio phone number (format: +1XXXXXXXXXX)
TWILIO_PHONE_NUMBER=+1234567890

# =============================================================================
# AI / LLM CONFIGURATION
# =============================================================================

# OpenAI API Key (for natural language processing)
OPENAI_API_KEY=your-openai-api-key

# Anthropic API Key (alternative LLM provider)
ANTHROPIC_API_KEY=your-anthropic-api-key

# Default LLM provider: openai, anthropic
LLM_PROVIDER=openai

# =============================================================================
# REMOTE ACCESS CONFIGURATION
# =============================================================================

# Remote agent secret key for authentication
REMOTE_AGENT_SECRET=your-remote-agent-secret

# Allowed IP addresses for remote access (comma-separated, or * for any)
REMOTE_ALLOWED_IPS=127.0.0.1

# =============================================================================
# RATE LIMITING
# =============================================================================

# Maximum requests per minute per user
RATE_LIMIT_PER_MINUTE=60

# Maximum SMS messages per hour per user
SMS_RATE_LIMIT_PER_HOUR=20

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable/disable specific features during development
FEATURE_SMS_ENABLED=false
FEATURE_REMOTE_ACCESS_ENABLED=false
FEATURE_HEALTH_TRACKING_ENABLED=true
